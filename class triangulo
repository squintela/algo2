//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"


using namespace std;


class triangulo
{ 
 private:
	 float base;
	 float altura;
 public:
	  triangulo()
	  {
		base=0;
		altura=0;
	  }
//metodos setters (insertar valores a los atributos)
	void setaltura(float a)
	{
		altura=a;
	}
	void setbase(float b)
	{
	base=b;
	}
	float getaltura()
	{
		return altura;
	}
	float getbase()
	{
	return base;
	}
	//metodo de la clase triangulo

	float area()
	{
		return((base*altura)/2);
	}
	float hipotenusa()
	{
		return(sqrt(altura*altura+base*base));
	}

};  //end class

void main()
{float a,b;
	triangulo t1;
	cout<<"Ingrese la base: ";
	cin>>b;
	t1.setbase(b);
	cout<<"Ingrese la altura: ";
	cin>>a;
	t1.setaltura(a);
	float at=t1.area();
	cout<<"el area es: "<<at<<endl;
	float r=t1.hipotenusa();
	cout<<"la hipotenusa es: "<<r;


getch();
}
