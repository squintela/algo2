//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"


using namespace std;


class triangulo
{ 
 private:
	 float base;
	 float altura;
 public:
	  triangulo()
	  {
		base=0;
		altura=0;
	  }
//metodos setters (insertar valores a los atributos)
	void setaltura(float a)
	{
		altura=a;
	}
	void setbase(float b)
	{
	base=b;
	}
	float getaltura()
	{
		return altura;
	}
	float getbase()
	{
	return base;
	}
	//metodo de la clase triangulo

	float area()
	{
		return((base*altura)/2);
	}
	float hipotenusa()
	{
		return(sqrt(altura*altura+base*base));
	}
	bool iguales(triangulo t1)
	{
		if(t1.getbase()==getbase()&& 
			t1.getaltura()==getaltura())
		{
			return true;
		}else{return false;}
	}

};  //end class

void main()
{float a,b;
	triangulo t1,t2;
	cout<<"Ingrese la base: ";
	cin>>b;
	t1.setbase(b);
	cout<<"Ingrese la altura: ";
	cin>>a;
	t1.setaltura(a);

	cout<<"Ingrese la base: ";
	cin>>b;
	t2.setbase(b);
	cout<<"Ingrese la altura: ";
	cin>>a;
	t2.setaltura(a);
	
	if(t2.iguales(t1))
	{
		cout<<"los triangulos son iguales ";
	}else{cout<<"no son iguales ";}
	cout<<endl;
	float at=t1.area();
	cout<<"el area(A1) es: "<<at<<endl;
	float r=t1.hipotenusa();
	cout<<"la hipotenusa(H1) es: "<<r;
	cout<<endl;
	float at2=t2.area();
	cout<<"el area(A2) es: "<<at2<<endl;
	float r2=t2.hipotenusa();
    cout<<"la hipotenusa(H2) es: "<<r2;


getch();
}
