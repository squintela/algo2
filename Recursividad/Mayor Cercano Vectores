#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int mayorcercano(int n, int v[],int y)
{
	if (y==0)
	{
		if (v[y] > n)
		{
			return v[y];
		}
		else { return -1; }
	}
	else {
		int x = mayorcercano(n, v,y-1);
		if (x == -1)
		{
			if (v[y] > n)
			{
				return v[y];
			}
			else {
				return -1;
			}
		}
		else {
			if (n < v[y])
			{
				if (x > v[y])
					return v[y];
				else
					return x;
			}
			else {
				return x;
			}
			{

			}
		}
	}


}
void cargar(int v[], int n)
{
	int c = 0;
	while (c<n)
	{
		cout << "V[" << c + 1 << "]";
		cin >> v[c];
		c++;
	}

}
void mostrar(int v[], int n)
{
	int c = 0;
	while (c<n)
	{
		cout << v[c] << " ";
		c++;
	}

}

void main()
{
	
	int n, v[100],x,y;
	cout << "Ingrese el tamaÃ±o del vector ";
	cin >> y;
	cout << "Cargue el vector ";
	cargar(v, y);
	cout << "Ingrese el numero que desea buscar su mayor cercano ";
	cin >> n;
	x = mayorcercano(n, v,y-1);

	cout << endl << "el mayor cercano del vector:  ";
	mostrar(v, y);
	cout << "  es: ";
	
	if (x == -1)
		cout << endl << "no hay un mayor cercano";
	else
		cout << x;
	_getch();
}

